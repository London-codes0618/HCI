 * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    margin: 0;
    background-color: #c00bb1;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    color: rgb(22, 5, 5);
    padding: 20px;
  }

  .header {
    text-align: center;
    font-size: 100px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .calendar {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    justify-content: center;
  }

  .month {
    background: #fff;
    border-radius: 10px;
    padding: 10px;
    color: black;
    box-shadow: 0 4px 8px rgba(255,255,255,0.1);
  }

  .jan, .feb, .mar, .apr, .may, .jun, .jul, .aug, .sep, .oct, .nov, .dec {
    text-align: center;
    font-weight: bold;
    padding: 8px 0;
    border-radius: 5px;
    color: rgb(15, 1, 1);
  }

  .jan { background-color: #48ee0c }
